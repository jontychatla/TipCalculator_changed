<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.calculator.tipcalculator"
          android:versionCode="7"
          android:versionName="4.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <supports-screens android:anyDensity="true" android:resizeable="true"/>
    <application android:label="@string/app_name" android:icon="@drawable/tip" android:theme="@style/Calc">
        <activity android:name="TipCalculator"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ViewTipActivity"/>
        <activity android:name=".SaveTipActivity"/>
        <activity android:name=".DataFilterActivity"/>
        <activity android:name=".TipFragmentActivity"/>
    </application>
</manifest>
